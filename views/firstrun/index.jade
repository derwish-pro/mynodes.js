extends ../empty_layout

block content
	.ui.container
		h2= title
		.ui.ordered.steps
			.step
				.content
					.title Database
					.description Configure database
			.step
				.content
					.title Gateway
					.description Connect to gateway
			.step
				.content
					.title User
					.description Create Admin profile
		.ui.divider
		.ui.two.column.stackable.centered.grid
			.column
				.ui.raised.segments
					.ui.secondary.segment
						h4= title
					.ui.attached.segment
						h2.ui.header Welcome to MyNodes.NET
						| This is the initial settings wizard.
						br
						| You will be offered the following steps:
						.ui.bulleted.list
							.item Configure database
							.item Connect to gateway
							.item Create Admin profile
					.ui.center.aligned.attached.segment
						.ui.buttons
							a.ui.primary.button(href='/FirstRun/Database') Well, let's start

